<%- include("partials/header") %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p class="lead">Best Campgrounds from Alberta</p>
      <p><a class="btn-primary btn text-decoration-none" href="/campgrounds/new">Add New Campground</a></p>
    </div>
  </header>


  <div class="row">
    <% sites.forEach(site => { %>
    <div class="col-lg-3 col-md-4 col-sm-6">
      <div class="card mb-4">
        <img src="<%= site.image %>" class="card-img-top img-thumbnail" alt="">
        <div class="card-body">
          <h4 class="card-title text-center"><%= site.name %> </h4>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

  <p><a href="/">Back to Landing</a></p>
  <%- include("partials/footer") %>
</div>