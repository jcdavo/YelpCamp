<%- include("../partials/header") %>

<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 30px;">Edit Comment</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" aria-placeholder="Name"
        method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" id="">
        </div>
        <div class="form-group">
          <button class="btn-primary btn btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

  <%- include("../partials/footer") %>