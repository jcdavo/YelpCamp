<%- include("../partials/header") %>

<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 30px;">Add New Comment to <%= campground.name %> </h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds/<%= campground._id %>/comments " aria-placeholder="Name" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Comment goes here" id="">
        </div>
        <div class="form-group">
          <button class="btn-primary btn btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>

  <%- include("../partials/footer") %>