<%- include("partials/header") %>
<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 30px;">Contact</h1>
    <div style="width: 30%; margin: 30px auto;">
      <form action="/contact" aria-placeholder="Name" method="post" required>
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Name" id="" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="email" name="email" placeholder="E-Mail" id="" required>
        </div>
        <div class="form-group">
          <label for="phonenum">Phone Number (format: xxx-xxx-xxxx):</label><br />
          <input class="form-control" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="number"
            placeholder="123-456-7890" maxlength="12" id="" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="message" placeholder="Message" id="" required>
        </div>
        <div class="form-group">
          <button class="btn-primary btn btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>
  </div>
</div>
<%- include("partials/footer") %>