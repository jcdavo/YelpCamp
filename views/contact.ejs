<%- include("partials/header") %>

<div class="container log-reg-padding">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-base my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Contact</h5>
          <!-- <h1 style="text-align: center; margin-top: 30px;">Contact</h1> -->
          <!-- <div style="width: 30%; margin: 30px auto;"> -->
          <form class="form-sign-log" action="/contact" aria-placeholder="Name" method="post" required>
            <div class="form-label-group">
              <input class="form-control" type="text" name="name" placeholder="Name" id="name" required>
              <label for="name">Name</label>
            </div>
            <div class="form-label-group">
              <input class="form-control" type="email" name="email" placeholder="E-Mail" id="email" required>
              <label for="email">E-Mail</label>
            </div>
            <div class="form-label-group">
              <input class="form-control" type="tel" pattern="[0-9]{3} [0-9]{3} [0-9]{4}" name="number"
                placeholder="123 123 1234" maxlength="12" id="phonenum" required>
              <label for="phonenum">Phone Number 123 123 1234</label>
            </div>
            <div class="form-label-group">
              <textarea class="form-control" type="text" name="message" rows="3" placeholder="Message" id="message"
                required></textarea>
            </div>
            <!-- <div class="form-group"> -->
            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Submit</button>
            <a href="/campgrounds" class="btn btn-sm btn-primary btn-block text-uppercase">Go Back</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") %>